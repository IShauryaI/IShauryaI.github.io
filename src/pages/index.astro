---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { Github, ExternalLink, ArrowRight } from 'lucide-astro';

const featuredProjects = [
  {
    title: "Professional Portfolio Site",
    description: "Performance-optimized Astro website with dark/light themes, responsive design, and accessibility-first architecture. Achieves Lighthouse 95+ scores across all metrics.",
    image: "/projects/portfolio-site.jpg",
    tags: ["Astro", "Tailwind CSS", "TypeScript", "Accessibility", "Performance"],
    liveUrl: "https://ishauryai.github.io",
    githubUrl: "https://github.com/IShauryaI/IShauryaI.github.io",
    date: "2025",
    featured: true,
  },
  {
    title: "AI Wellness Platform",
    description: "Intelligent wellness application leveraging machine learning for personalized health recommendations, mood tracking, and mental wellbeing analytics with React and TypeScript.",
    image: "/projects/wellness-ai.jpg",
    tags: ["React", "TypeScript", "ML", "Health Tech", "Data Visualization"],
    liveUrl: "https://wellbeingai-demo.vercel.app",
    githubUrl: "https://github.com/IShauryaI/wellbeingaifinalversion",
    date: "2025",
    featured: true,
  },
  {
    title: "Interactive React Showcase",
    description: "Modern portfolio application demonstrating advanced React patterns, component design systems, performance optimization, and shadcn/ui integration.",
    image: "/projects/react-showcase.jpg",
    tags: ["React 18", "Vite", "shadcn/ui", "Component System", "Performance"],
    githubUrl: "https://github.com/IShauryaI/shaurya-unfold",
    date: "2025",
  },
];
---

<Layout title="Shaurya - UI/UX Engineer, ML/AI Developer & Full Stack Architect">
  <Header />
  <main>
    <!-- Hero Section -->
    <Hero />
    
    <!-- Featured Projects Section -->
    <section class="py-20 bg-gray-50 dark:bg-dark-800">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-dark-900 dark:text-white mb-4">
            Featured Projects
          </h2>
          <p class="text-lg text-dark-600 dark:text-gray-400 max-w-2xl mx-auto">
            A showcase of recent work spanning UI/UX engineering, machine learning applications, 
            and full-stack development with modern technologies.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {featuredProjects.map((project) => (
            <ProjectCard {...project} />
          ))}
        </div>
        
        <div class="text-center">
          <a 
            href="/projects" 
            class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg font-semibold transition-all hover:scale-105"
          >
            View All Projects
            <ArrowRight class="ml-2 w-5 h-5" />
          </a>
        </div>
      </div>
    </section>
    
    <!-- Skills Overview Section -->
    <section class="py-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-dark-900 dark:text-white mb-4">
            Technical Expertise
          </h2>
          <p class="text-lg text-dark-600 dark:text-gray-400 max-w-2xl mx-auto">
            Proficient across the full technology stack with specialization in user experience, 
            machine learning, and scalable system architecture.
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          <!-- UI/UX & Frontend -->
          <div class="bg-white dark:bg-dark-800 rounded-xl p-8 shadow-lg">
            <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v6a4 4 0 004 4h4V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark-900 dark:text-white mb-4">UI/UX & Frontend</h3>
            <div class="space-y-2 text-dark-600 dark:text-gray-400">
              <div>TypeScript • React • Astro</div>
              <div>Next.js • Tailwind CSS</div>
              <div>Accessibility (WCAG 2.1)</div>
              <div>Performance Optimization</div>
              <div>Design Systems</div>
            </div>
          </div>
          
          <!-- Machine Learning & AI -->
          <div class="bg-white dark:bg-dark-800 rounded-xl p-8 shadow-lg">
            <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark-900 dark:text-white mb-4">Machine Learning & AI</h3>
            <div class="space-y-2 text-dark-600 dark:text-gray-400">
              <div>TensorFlow • PyTorch</div>
              <div>Computer Vision • CNNs</div>
              <div>Object Detection</div>
              <div>Data Analysis • MLOps</div>
              <div>ML Inference • Models</div>
            </div>
          </div>
          
          <!-- Full Stack & DevOps -->
          <div class="bg-white dark:bg-dark-800 rounded-xl p-8 shadow-lg">
            <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark-900 dark:text-white mb-4">Full Stack & DevOps</h3>
            <div class="space-y-2 text-dark-600 dark:text-gray-400">
              <div>Node.js • Python • Java</div>
              <div>PostgreSQL • MongoDB</div>
              <div>REST APIs • GraphQL</div>
              <div>Docker • AWS • CI/CD</div>
              <div>Testing • Security</div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="py-20 bg-primary-600 dark:bg-primary-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
          Let's Build Something Amazing Together
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          Ready to bring your ideas to life with cutting-edge technology and exceptional user experience.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a 
            href="/contact" 
            class="inline-flex items-center px-8 py-4 bg-white text-primary-600 rounded-lg font-semibold hover:bg-gray-100 transition-all hover:scale-105"
          >
            Start a Conversation
          </a>
          <a 
            href="/projects" 
            class="inline-flex items-center px-8 py-4 border-2 border-white text-white hover:bg-white hover:text-primary-600 rounded-lg font-semibold transition-all hover:scale-105"
          >
            Explore My Work
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>