---
import ThemeToggle from './ThemeToggle.astro';
import { Home, User, Briefcase, Edit3, Mail } from 'lucide-astro';
---

<header class="sticky top-0 z-50 bg-white/90 dark:bg-dark-900/90 backdrop-blur-sm border-b border-gray-200 dark:border-dark-700">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="text-2xl font-bold text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors">
        Shaurya
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="flex items-center space-x-2 text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          <Home size={18} />
          <span>Home</span>
        </a>
        <a href="/projects" class="flex items-center space-x-2 text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          <Briefcase size={18} />
          <span>Projects</span>
        </a>
        <a href="/writing" class="flex items-center space-x-2 text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          <Edit3 size={18} />
          <span>Writing</span>
        </a>
        <a href="/about" class="flex items-center space-x-2 text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          <User size={18} />
          <span>About</span>
        </a>
        <a href="/contact" class="flex items-center space-x-2 text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          <Mail size={18} />
          <span>Contact</span>
        </a>
        <ThemeToggle />
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center space-x-4">
        <ThemeToggle />
        <button id="mobile-menu-toggle" class="text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <div class="flex flex-col space-y-4">
        <a href="/" class="flex items-center space-x-2 text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          <Home size={18} />
          <span>Home</span>
        </a>
        <a href="/projects" class="flex items-center space-x-2 text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          <Briefcase size={18} />
          <span>Projects</span>
        </a>
        <a href="/writing" class="flex items-center space-x-2 text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          <Edit3 size={18} />
          <span>Writing</span>
        </a>
        <a href="/about" class="flex items-center space-x-2 text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          <User size={18} />
          <span>About</span>
        </a>
        <a href="/contact" class="flex items-center space-x-2 text-dark-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
          <Mail size={18} />
          <span>Contact</span>
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    
    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>